@page "/Accounts"
@inject IAccountService AccountService
@inject IJSRuntime JS
@using BankApp.Domain
@using BankApp.Interfaces

<h3>My Accounts</h3>

@if (accounts is null)
{
    <p>Loading accounts...</p>
}
else if (accounts.Count == 0)
{
    <p>No accounts found. Please create an account first!</p>
}
else
{
    // Display list of all user accounts.
    <ul class="list-group">
        @foreach (var acc in accounts)
        {
            <li class="list-group-item">
                <strong>@acc.Name</strong> — @acc.AccountType<br />
                Balance: @acc.Balance @acc.Currency<br />
                <small>Last updated: @acc.LastUpdated.ToLocalTime()</small>
            </li>
            // If account balance is zero, allow deletion.
               @if (acc.Balance == 0m)
                {
                    <button class="btn btn-sm btn-danger"
                            @onclick="async () => await RemoveAccount(acc.Id)">
                        Remove Account
                    </button>
                }
            // Otherwise, disable the delete button.
                else
                {
                    <button class="btn btn-sm btn-secondary" disabled title="Balance must be 0">
                        Cannot Remove
                    </button>
                }
        }
    </ul>
}

@code {
    // List holding all accounts retrieved from the service.
    private List<IBankAccount>? accounts;

    protected override async Task OnInitializedAsync()
    {
        accounts = await AccountService.GetAllAccounts();
    }

    // Removes an account by its ID, then refreshes the list.
    private async Task RemoveAccount(Guid id)
    {

        await AccountService.DeleteAccount(id);          
        accounts = await AccountService.GetAllAccounts(); 
    }

	// Applies interest to all accounts and refreshes the list.
    private async Task ApplyInterest(decimal annualRate)
    {
        await AccountService.ApplyMonthlyInterestAsync(annualRate);
        accounts = await AccountService.GetAllAccounts(); 
    }
}
