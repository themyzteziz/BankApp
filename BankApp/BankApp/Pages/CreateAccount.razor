@page "/CreateAccount"
@inject BankApp.Interfaces.IAccountService AccountService
    
@using BankApp.Domain
@using BankApp.Interfaces
@using System.ComponentModel.DataAnnotations

<h3>Vänligen Skapa ett konto</h3>

<EditForm Model="_model" OnValidSubmit="CreateAccountAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>Kontonamn</label>
        <InputText @bind-Value="_model.Name" />
        <ValidationMessage For="@(() => _model.Name)" />
    </div>

    <div>
        <label>Kontotyp</label>
        <InputSelect @bind-Value="_model.accountType" TValue="AccountType">
            <option value="">Välj kontotyp!</option>
            <option value="@AccountType.Deposit">Sparkonto</option>
            <option value="@AccountType.Savings">Bankkonto</option>
        </InputSelect>
    </div>

    <div>
        <label>Valuta</label>
        <InputText @bind-Value="_model.Currency" />
    </div>

    <div>
        <label>Start Saldo</label>
        <InputNumber @bind-Value="_model.initialBalance" TValue="decimal?" />
    </div>

    <button type="submit">Skapa konto</button>
</EditForm>

<h4>Alla konton</h4>

@if (_accounts.Count == 0)
{
    <p>Inga konton skapade än. Skapa konto ovan!</p>
}
else
{
    <ul>
        @foreach (var account in _accounts)
        {
            <li>
                <strong>@account.AccountType - @account.Balance - @account.Name</strong>
                @* <small>(uppdaterad @account.LastUpdated.ToLocalTime())</small> *@
            </li>
        }
    </ul>
}

@code {
    private CreateAccountModel _model = new();
    private List<IBankAccount> _accounts = new();

    protected override async Task OnInitializedAsync()
    {
        _accounts = await AccountService.GetAllAccounts();
    }

    private async Task CreateAccountAsync()
    {
        try
        {
            await AccountService.CreateAccount(
             _model.Name ?? string.Empty,
             _model.Currency,
             _model.initialBalance ?? 0,
             _model.accountType
            );

            _accounts = await AccountService.GetAllAccounts();
            _model.Clear();
            StateHasChanged();
        }
        catch (Exception exception)
        {
            Console.WriteLine(exception);
        }
    }

    private class CreateAccountModel
    {
        [Required(ErrorMessage = "Kontonamn krävs")]
        public string? Name { get; set; } = string.Empty;
        public AccountType accountType { get; set; }
        public string Currency { get; set; } = "SEK";
        public decimal? initialBalance { get; set; } = 0;

        public void Clear()
        {
            Name = string.Empty;
            Currency = "SEK";
            initialBalance = 0;
        }
    }
}
